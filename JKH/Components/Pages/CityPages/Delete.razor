@page "/cities/delete"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>City</h2>
    <hr />
    @if (city is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@city.Name</dd>
        </dl>
        <EditForm method="post" Model="city" OnValidSubmit="DeleteCity" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(city is null)">Delete</button> |
            <a href="/cities">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private City? city;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        city = await context.Cities.FirstOrDefaultAsync(m => m.Id == Id);

        if (city is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCity()
    {
        using var context = DbFactory.CreateDbContext();
        context.Cities.Remove(city!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/cities");
    }
}
