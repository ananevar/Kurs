@page "/cities/delete"
@using Microsoft.EntityFrameworkCore
@using JKH.Data
@using JKH.Models
@implements IAsyncDisposable
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Удалить город</PageTitle>

<h1>Удалить город</h1>

@if (_loading)
{
    <p>Загрузка...</p>
}
else if (_notFound)
{
    <div class="alert alert-warning">Город не найден.</div>
    <a class="btn btn-link" href="/cities">Назад</a>
}
else
{
    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger">@_error</div>
    }

    <div class="alert alert-warning">
        Вы уверены, что хотите удалить город: <b>@_name</b>?
    </div>

    <button class="btn btn-danger" @onclick="DeleteAsync">Удалить</button>
    <a class="btn btn-link" href="/cities">Отмена</a>
}

@code {
    [SupplyParameterFromQuery] public int? id { get; set; }

    private ApplicationDbContext _db = default!;
    private bool _loading = true;
    private bool _notFound = false;
    private string _name = "";
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        _db = await DbFactory.CreateDbContextAsync();

        if (!id.HasValue)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        var city = await _db.Cities.AsNoTracking().FirstOrDefaultAsync(c => c.Id == id.Value);
        if (city is null)
        {
            _notFound = true;
            _loading = false;
            return;
        }

        _name = city.Name;
        _loading = false;
    }

    private async Task DeleteAsync()
    {
        _error = null;

        var city = await _db.Cities.FirstOrDefaultAsync(c => c.Id == id!.Value);
        if (city is null) { _notFound = true; return; }

        _db.Cities.Remove(city);

        try
        {
            await _db.SaveChangesAsync();
            NavigationManager.NavigateTo("/cities");
        }
        catch (DbUpdateException)
        {
            _error = "Нельзя удалить город: в нем есть районы. Сначала удалите районы или перенесите их в другой город.";
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_db is not null) await _db.DisposeAsync();
    }
}
