@page "/buildings/edit"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Редактирование дома</PageTitle>

<h1>Редактировать дом</h1>
<hr />

@if (_loading)
{
    <p><em>Загрузка...</em></p>
}
else if (Building is null)
{
    <div class="alert alert-warning">Дом не найден.</div>
    <a class="btn btn-link" href="@BackUrl">Назад</a>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="Building" OnValidSubmit="UpdateBuilding">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">Номер дома</label>
                    <InputText class="form-control" @bind-Value="Building.Number" />
                    <ValidationMessage For="() => Building.Number" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a class="btn btn-link" href="@BackUrl">Отмена</a>

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="alert alert-danger mt-3">@_error</div>
                }
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    public int id { get; set; }   // /buildings/edit?id=123

    private Building? Building;
    private bool _loading = true;
    private string? _error;

    private int _streetId;
    private string BackUrl => _streetId != 0 ? $"/buildings?streetId={_streetId}" : "/cities";

    protected override async Task OnInitializedAsync()
    {
        await using var context = await DbFactory.CreateDbContextAsync();

        Building = await context.Buildings.FirstOrDefaultAsync(b => b.Id == id);

        if (Building is null)
        {
            _loading = false;
            return;
        }

        _streetId = Building.StreetId;
        _loading = false;
    }

    private async Task UpdateBuilding()
    {
        _error = null;

        await using var context = await DbFactory.CreateDbContextAsync();

        var entity = await context.Buildings.FirstOrDefaultAsync(b => b.Id == id);
        if (entity is null)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        // обновляем только номер
        entity.Number = Building!.Number.Trim();

        try
        {
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo(BackUrl);
        }
        catch (DbUpdateException)
        {
            _error = "Не удалось сохранить. Возможно, дом с таким номером уже существует на этой улице.";
        }
    }
}
