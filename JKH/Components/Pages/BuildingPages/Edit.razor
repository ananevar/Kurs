@page "/buildings/edit"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>Building</h2>
<hr />
@if (Building is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Building" OnValidSubmit="UpdateBuilding" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="Building.Id" value="@Building.Id" />
                <div class="mb-3">
                    <label for="number" class="form-label">Number:</label>
                    <InputText id="number" @bind-Value="Building.Number" class="form-control" />
                    <ValidationMessage For="() => Building.Number" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="streetid" class="form-label">StreetId:</label>
                    <InputNumber id="streetid" @bind-Value="Building.StreetId" class="form-control" />
                    <ValidationMessage For="() => Building.StreetId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/buildings">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Building? Building { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Building ??= await context.Buildings.FirstOrDefaultAsync(m => m.Id == Id);

        if (Building is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateBuilding()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Building!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!BuildingExists(Building!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/buildings");
    }

    private bool BuildingExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Buildings.Any(e => e.Id == id);
    }
}
