@page "/buildings/delete"
@using Microsoft.EntityFrameworkCore
@using JKH.Data
@using JKH.Models
@implements IAsyncDisposable
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Удалить дом</PageTitle>

<h1>Удалить дом</h1>

@if (_loading)
{
    <p>Загрузка...</p>
}
else if (_notFound)
{
    <div class="alert alert-warning">Дом не найден.</div>
    <a class="btn btn-link" href="@BackUrl">Назад</a>
}
else
{
    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger">@_error</div>
    }

    <div class="alert alert-warning">
        Вы уверены, что хотите удалить дом: <b>@_number</b>?
    </div>

    <button class="btn btn-danger" @onclick="DeleteAsync">Удалить</button>
    <a class="btn btn-link" href="@BackUrl">Отмена</a>
}

@code {
    [SupplyParameterFromQuery] public int? id { get; set; }

    private ApplicationDbContext _db = default!;
    private bool _loading = true;
    private bool _notFound = false;

    private string _number = "";
    private int _streetId;
    private string BackUrl => _streetId != 0 ? $"/buildings?streetId={_streetId}" : "/cities";
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        _db = await DbFactory.CreateDbContextAsync();

        if (!id.HasValue)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        var building = await _db.Buildings.AsNoTracking().FirstOrDefaultAsync(b => b.Id == id.Value);
        if (building is null)
        {
            _notFound = true;
            _loading = false;
            return;
        }

        _number = building.Number;
        _streetId = building.StreetId;
        _loading = false;
    }

    private async Task DeleteAsync()
    {
        _error = null;

        var building = await _db.Buildings.FirstOrDefaultAsync(b => b.Id == id!.Value);
        if (building is null) { _notFound = true; return; }

        _db.Buildings.Remove(building);

        try
        {
            await _db.SaveChangesAsync();
            NavigationManager.NavigateTo(BackUrl);
        }
        catch (DbUpdateException)
        {
            _error = "Нельзя удалить дом: в нём есть квартиры (properties) или другие связанные данные. Сначала удалите/перенесите квартиры.";
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_db is not null) await _db.DisposeAsync();
    }
}
