@page "/buildings/create"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Building</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Building" OnValidSubmit="AddBuilding" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="number" class="form-label">Number:</label> 
                <InputText id="number" @bind-Value="Building.Number" class="form-control" /> 
                <ValidationMessage For="() => Building.Number" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="streetid" class="form-label">StreetId:</label> 
                <InputNumber id="streetid" @bind-Value="Building.StreetId" class="form-control" /> 
                <ValidationMessage For="() => Building.StreetId" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/buildings">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Building Building { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddBuilding()
    {
        using var context = DbFactory.CreateDbContext();
        context.Buildings.Add(Building);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/buildings");
    }
}
