@page "/tariffs/edit"
@using System.ComponentModel.DataAnnotations
@using Microsoft.EntityFrameworkCore
@using JKH.Data
@using JKH.Models
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Редактировать тариф</PageTitle>

<h1>Редактировать тариф</h1>
<hr />

@if (_loading)
{
    <p><em>Загрузка...</em></p>
}
else if (_notFound)
{
    <div class="alert alert-warning">Тариф не найден.</div>
    <a class="btn btn-link" href="/tariffs">Назад</a>
}
else
{
    <EditForm Model="_model" OnValidSubmit="SaveAsync">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <div class="mb-3">
            <label class="form-label">Услуга</label>
            <select class="form-select" @bind="_model.ServiceTypeId">
                <option value="0">-- выберите --</option>
                @foreach (var s in _serviceTypes)
                {
                    <option value="@s.Id">@s.Name (@s.Unit)</option>
                }
            </select>
            <ValidationMessage For="() => _model.ServiceTypeId" class="text-danger" />
        </div>

        <div class="mb-3">
            <label class="form-label">Цена за единицу</label>
            <InputNumber class="form-control" @bind-Value="_model.PricePerUnit" />
            <ValidationMessage For="() => _model.PricePerUnit" class="text-danger" />
        </div>

        <div class="mb-3">
            <label class="form-label">Действует с</label>
            <InputDate class="form-control" @bind-Value="_model.ValidFrom" />
        </div>

        <div class="mb-3">
            <label class="form-label">Действует по (необязательно)</label>
            <InputDate class="form-control" @bind-Value="_model.ValidTo" />
        </div>

        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a class="btn btn-link" href="@BackUrl">Отмена</a>

        @if (!string.IsNullOrWhiteSpace(_error))
        {
            <div class="alert alert-danger mt-3">@_error</div>
        }
    </EditForm>
}

@code {
    [SupplyParameterFromQuery] public int id { get; set; }

    private bool _loading = true;
    private bool _notFound = false;
    private string? _error;

    private int _serviceTypeIdForBack;
    private string BackUrl => _serviceTypeIdForBack > 0 ? $"/tariffs?serviceTypeId={_serviceTypeIdForBack}" : "/tariffs";

    private List<ServiceType> _serviceTypes = new();
    private Vm _model = new();

    private sealed class Vm
    {
        [Range(1, int.MaxValue, ErrorMessage = "Выберите услугу")]
        public int ServiceTypeId { get; set; }

        [Range(0.000001, 999999999, ErrorMessage = "Введите цену")]
        public decimal PricePerUnit { get; set; }

        public DateTime ValidFrom { get; set; }
        public DateTime? ValidTo { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        await using var db = await DbFactory.CreateDbContextAsync();

        _serviceTypes = await db.ServiceTypes.AsNoTracking().OrderBy(x => x.Name).ToListAsync();

        var t = await db.Tariffs.AsNoTracking().FirstOrDefaultAsync(x => x.Id == id);
        if (t is null)
        {
            _notFound = true;
            _loading = false;
            return;
        }

        _serviceTypeIdForBack = t.ServiceTypeId;

        _model.ServiceTypeId = t.ServiceTypeId;
        _model.PricePerUnit = t.PricePerUnit;
        _model.ValidFrom = t.ValidFrom.ToDateTime(TimeOnly.MinValue);
        _model.ValidTo = t.ValidTo.HasValue ? t.ValidTo.Value.ToDateTime(TimeOnly.MinValue) : (DateTime?)null;

        _loading = false;
    }

    private async Task SaveAsync()
    {
        _error = null;

        if (_model.ValidTo.HasValue && _model.ValidTo.Value.Date < _model.ValidFrom.Date)
        {
            _error = "Дата окончания не может быть раньше даты начала.";
            return;
        }

        await using var db = await DbFactory.CreateDbContextAsync();

        var entity = await db.Tariffs.FirstOrDefaultAsync(x => x.Id == id);
        if (entity is null)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        entity.ServiceTypeId = _model.ServiceTypeId;
        entity.PricePerUnit = _model.PricePerUnit;
        entity.ValidFrom = DateOnly.FromDateTime(_model.ValidFrom);
        entity.ValidTo = _model.ValidTo.HasValue ? DateOnly.FromDateTime(_model.ValidTo.Value) : null;

        try
        {
            await db.SaveChangesAsync();
            NavigationManager.NavigateTo($"/tariffs?serviceTypeId={entity.ServiceTypeId}");
        }
        catch (DbUpdateException)
        {
            _error = "Не удалось сохранить. Возможен конфликт тарифов по периодам.";
        }
    }
}
