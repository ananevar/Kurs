@page "/districts/edit"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>District</h2>
<hr />
@if (District is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="District" OnValidSubmit="UpdateDistrict" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="District.Id" value="@District.Id" />
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <InputText id="name" @bind-Value="District.Name" class="form-control" />
                    <ValidationMessage For="() => District.Name" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="cityid" class="form-label">CityId:</label>
                    <InputNumber id="cityid" @bind-Value="District.CityId" class="form-control" />
                    <ValidationMessage For="() => District.CityId" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/districts">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private District? District { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        District ??= await context.Districts.FirstOrDefaultAsync(m => m.Id == Id);

        if (District is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateDistrict()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(District!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!DistrictExists(District!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/districts");
    }

    private bool DistrictExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Districts.Any(e => e.Id == id);
    }
}
