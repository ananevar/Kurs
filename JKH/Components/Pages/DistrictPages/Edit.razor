@page "/districts/edit"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Редактирование района</PageTitle>

<h1>Редактировать район</h1>
<hr />

@if (_loading)
{
    <p><em>Загрузка...</em></p>
}
else if (District is null)
{
    <div class="alert alert-warning">Район не найден.</div>
    <a class="btn btn-link" href="@BackUrl">Назад</a>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="District" OnValidSubmit="UpdateDistrict">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">Название</label>
                    <InputText class="form-control" @bind-Value="District.Name" />
                    <ValidationMessage For="() => District.Name" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a class="btn btn-link" href="@BackUrl">Отмена</a>

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="alert alert-danger mt-3">@_error</div>
                }
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    public int id { get; set; }   // /districts/edit?id=123

    private District? District;
    private bool _loading = true;
    private string? _error;

    private int _cityId;
    private string BackUrl => _cityId != 0 ? $"/districts?cityId={_cityId}" : "/cities";

    protected override async Task OnInitializedAsync()
    {
        await using var context = await DbFactory.CreateDbContextAsync();

        District = await context.Districts.FirstOrDefaultAsync(d => d.Id == id);

        if (District is null)
        {
            _loading = false;
            return;
        }

        _cityId = District.CityId;
        _loading = false;
    }

    private async Task UpdateDistrict()
    {
        _error = null;

        await using var context = await DbFactory.CreateDbContextAsync();

        var entity = await context.Districts.FirstOrDefaultAsync(d => d.Id == id);
        if (entity is null)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        // обновляем только Name (без риска перезаписать CityId)
        entity.Name = District!.Name.Trim();

        try
        {
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo(BackUrl);
        }
        catch (DbUpdateException)
        {
            _error = "Не удалось сохранить. Возможно, район с таким названием уже существует в этом городе.";
        }
    }
}
