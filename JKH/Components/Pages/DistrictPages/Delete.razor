@page "/districts/delete"
@using Microsoft.EntityFrameworkCore
@using JKH.Data
@using JKH.Models
@implements IAsyncDisposable
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Удалить район</PageTitle>

<h1>Удалить район</h1>

@if (_loading)
{
    <p>Загрузка...</p>
}
else if (_notFound)
{
    <div class="alert alert-warning">Район не найден.</div>
    <a class="btn btn-link" href="@BackUrl">Назад</a>
}
else
{
    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger">@_error</div>
    }

    <div class="alert alert-warning">
        Вы уверены, что хотите удалить район: <b>@_name</b>?
    </div>

    <button class="btn btn-danger" @onclick="DeleteAsync">Удалить</button>
    <a class="btn btn-link" href="@BackUrl">Отмена</a>
}

@code {
    [SupplyParameterFromQuery] public int? id { get; set; }

    private ApplicationDbContext _db = default!;
    private bool _loading = true;
    private bool _notFound = false;

    private string _name = "";
    private int _cityId;
    private string BackUrl => _cityId != 0 ? $"/districts?cityId={_cityId}" : "/cities";
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        _db = await DbFactory.CreateDbContextAsync();

        if (!id.HasValue)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        var district = await _db.Districts.AsNoTracking().FirstOrDefaultAsync(d => d.Id == id.Value);
        if (district is null)
        {
            _notFound = true;
            _loading = false;
            return;
        }

        _name = district.Name;
        _cityId = district.CityId;
        _loading = false;
    }

    private async Task DeleteAsync()
    {
        _error = null;

        var district = await _db.Districts.FirstOrDefaultAsync(d => d.Id == id!.Value);
        if (district is null) { _notFound = true; return; }

        _db.Districts.Remove(district);

        try
        {
            await _db.SaveChangesAsync();
            NavigationManager.NavigateTo(BackUrl);
        }
        catch (DbUpdateException)
        {
            _error = "Нельзя удалить район: в нём есть улицы. Сначала удалите улицы или перенесите их в другой район.";
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_db is not null) await _db.DisposeAsync();
    }
}
