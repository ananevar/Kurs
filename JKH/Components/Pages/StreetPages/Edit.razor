@page "/streets/edit"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Редактирование улицы</PageTitle>

<h1>Редактировать улицу</h1>
<hr />

@if (_loading)
{
    <p><em>Загрузка...</em></p>
}
else if (Street is null)
{
    <div class="alert alert-warning">Улица не найдена.</div>
    <a class="btn btn-link" href="@BackUrl">Назад</a>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="Street" OnValidSubmit="UpdateStreet">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">Название</label>
                    <InputText class="form-control" @bind-Value="Street.Name" />
                    <ValidationMessage For="() => Street.Name" class="text-danger" />
                </div>

                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a class="btn btn-link" href="@BackUrl">Отмена</a>

                @if (!string.IsNullOrWhiteSpace(_error))
                {
                    <div class="alert alert-danger mt-3">@_error</div>
                }
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    public int id { get; set; }   // /streets/edit?id=123

    private Street? Street;
    private bool _loading = true;
    private string? _error;

    private int _districtId;
    private string BackUrl => _districtId != 0 ? $"/streets?districtId={_districtId}" : "/cities";

    protected override async Task OnInitializedAsync()
    {
        await using var context = await DbFactory.CreateDbContextAsync();

        Street = await context.Streets.FirstOrDefaultAsync(s => s.Id == id);

        if (Street is null)
        {
            _loading = false;
            return;
        }

        _districtId = Street.DistrictId;
        _loading = false;
    }

    private async Task UpdateStreet()
    {
        _error = null;

        await using var context = await DbFactory.CreateDbContextAsync();

        var entity = await context.Streets.FirstOrDefaultAsync(s => s.Id == id);
        if (entity is null)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        entity.Name = Street!.Name.Trim();

        try
        {
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo(BackUrl);
        }
        catch (DbUpdateException)
        {
            _error = "Не удалось сохранить. Возможно, такая улица уже существует в этом районе.";
        }
    }
}
