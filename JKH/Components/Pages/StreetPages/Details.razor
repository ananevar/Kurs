@page "/streets/details"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Street</h2>
    <hr />
    @if (street is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@street.Name</dd>
            <dt class="col-sm-2">DistrictId</dt>
            <dd class="col-sm-10">@street.DistrictId</dd>
        </dl>
        <div>
            <a href="@($"/streets/edit?id={street.Id}")">Edit</a> |
            <a href="@($"/streets")">Back to List</a>
        </div>
    }
</div>

@code {
    private Street? street;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        street = await context.Streets.FirstOrDefaultAsync(m => m.Id == Id);

        if (street is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
