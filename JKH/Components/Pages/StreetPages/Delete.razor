@page "/streets/delete"
@using Microsoft.EntityFrameworkCore
@using JKH.Data
@using JKH.Models
@implements IAsyncDisposable
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Удалить улицу</PageTitle>

<h1>Удалить улицу</h1>

@if (_loading)
{
    <p>Загрузка...</p>
}
else if (_notFound)
{
    <div class="alert alert-warning">Улица не найдена.</div>
    <a class="btn btn-link" href="@BackUrl">Назад</a>
}
else
{
    @if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger">@_error</div>
    }

    <div class="alert alert-warning">
        Вы уверены, что хотите удалить улицу: <b>@_streetName</b>?
    </div>

    <button class="btn btn-danger" @onclick="DeleteAsync">Удалить</button>
    <a class="btn btn-link" href="@BackUrl">Отмена</a>
}

@code {
    [SupplyParameterFromQuery]
    public int? id { get; set; }   // /streets/delete?id=123

    private ApplicationDbContext _db = default!;
    private bool _loading = true;
    private bool _notFound = false;

    private int _districtId;
    private string _streetName = "";
    private string? _error;

    private string BackUrl => _districtId != 0 ? $"/streets?districtId={_districtId}" : "/cities";

    protected override async Task OnInitializedAsync()
    {
        _db = await DbFactory.CreateDbContextAsync();

        if (!id.HasValue)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        var street = await _db.Streets
            .AsNoTracking()
            .FirstOrDefaultAsync(s => s.Id == id.Value);

        if (street is null)
        {
            _notFound = true;
            _loading = false;
            return;
        }

        _streetName = street.Name;
        _districtId = street.DistrictId;

        _loading = false;
    }

    private async Task DeleteAsync()
    {
        _error = null;

        var street = await _db.Streets.FirstOrDefaultAsync(s => s.Id == id!.Value);
        if (street is null)
        {
            _notFound = true;
            return;
        }

        _db.Streets.Remove(street);

        try
        {
            await _db.SaveChangesAsync();
            NavigationManager.NavigateTo(BackUrl);
        }
        catch (DbUpdateException)
        {
            // Это и есть твой вариант №1
            _error = "Нельзя удалить улицу: на ней есть дома. Сначала удалите дома или перенесите их на другую улицу.";
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (_db is not null)
            await _db.DisposeAsync();
    }
}
