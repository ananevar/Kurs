@page "/streets/delete"
@using Microsoft.EntityFrameworkCore
@using JKH.Models
@inject IDbContextFactory<JKH.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Street</h2>
    <hr />
    @if (street is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@street.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DistrictId</dt>
            <dd class="col-sm-10">@street.DistrictId</dd>
        </dl>
        <EditForm method="post" Model="street" OnValidSubmit="DeleteStreet" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(street is null)">Delete</button> |
            <a href="/streets">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Street? street;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        street = await context.Streets.FirstOrDefaultAsync(m => m.Id == Id);

        if (street is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteStreet()
    {
        using var context = DbFactory.CreateDbContext();
        context.Streets.Remove(street!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/streets");
    }
}
