@page "/streets/create"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using JKH.Models
@using JKH.Data
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Добавить улицу</PageTitle>

<h1>Добавить улицу</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <EditForm Model="Street" OnValidSubmit="AddStreet">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label class="form-label">Название улицы</label>
                <InputText class="form-control" @bind-Value="Street.Name" />
                <ValidationMessage For="() => Street.Name" class="text-danger" />
            </div>

            <!-- DistrictId скрыто, подставляется из query -->
            <input type="hidden" @bind="Street.DistrictId" />

            <button type="submit" class="btn btn-primary">Создать</button>
        </EditForm>
    </div>
</div>

<div class="mt-3">
    <a href="@BackUrl">Назад</a>
</div>

@code {
    [SupplyParameterFromQuery]
    public int? districtId { get; set; }

    private Street Street { get; set; } = new();

    private string BackUrl =>
        districtId.HasValue ? $"/streets?districtId={districtId.Value}" : "/cities";

    protected override void OnInitialized()
    {
        if (!districtId.HasValue)
        {
            NavigationManager.NavigateTo("/notfound");
            return;
        }

        Street.DistrictId = districtId.Value;
    }

    private async Task AddStreet()
    {
        await using var context = await DbFactory.CreateDbContextAsync();
        context.Streets.Add(Street);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo(BackUrl);
    }
}
